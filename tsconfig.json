{
   "compilerOptions": {
      "target": "ES2022",
      "module": "ES2022",
      "outDir": "./dist",
      "rootDir": "./src",
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "esModuleInterop": true
   },
   "include": ["src/**/*.ts"],
   "exclude": ["node_modules"]
}
